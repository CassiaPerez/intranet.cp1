# Production Environment Variables for Intranet Cropfield
# Copy this file to .env and configure the values

# Server Configuration
NODE_ENV=production
HOST=127.0.0.1
PORT=3006

# Domain Configuration
WEB_URL=https://intranet.grupocropfield.com.br
API_URL=https://intranet.cropfield.com.br

# Security
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_IN_PRODUCTION

# Google OAuth Configuration
# Get these from Google Cloud Console
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=https://intranet.cropfield.com.br/auth/google/callback

# Database
DATABASE_PATH=/var/www/intranet/data/database.sqlite

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/intranet/app.log

# SSL Certificates (if using custom certs)
SSL_CERT_PATH=/etc/letsencrypt/live/intranet.cropfield.com.br/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/intranet.cropfield.com.br/privkey.pem